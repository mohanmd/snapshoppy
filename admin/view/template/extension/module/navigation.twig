{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                </button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="status" id="input-status" class="form-control">
                                {% if status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   name="name"
                                   value="{{ name }}"
                                   placeholder="{{ entry_name }}"
                                   id="input-name"
                                   class="form-control" />
                            {% if error_name %}
                                <div class="text-danger">{{ error_name }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-menu_color">{{ entry_menu_color }}</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   name="menu_color"
                                   value="{{ menu_color }}"
                                   placeholder="{{ entry_menu_color }}"
                                   id="input-menu_color"
                                   class="form-control" />
                            {% if error_menu_color %}
                                <div class="text-danger">{{ error_menu_color }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="input-menu_border_color">
                            {{ entry_menu_border_color }}
                        </label>
                        <div class="col-sm-10">
                            <input type="text"
                                   name="menu_border_color"
                                   value="{{ menu_border_color }}"
                                   placeholder="{{ entry_menu_border_color }}"
                                   id="input-menu_border_color"
                                   class="form-control" />
                            {% if error_menu_border_color %}
                                <div class="text-danger">{{ error_menu_border_color }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-text_color">{{ entry_text_color }}</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   name="text_color"
                                   value="{{ text_color }}"
                                   placeholder="{{ entry_text_color }}"
                                   id="input-text_color"
                                   class="form-control" />
                            {% if error_text_color %}
                                <div class="text-danger">{{ error_text_color }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="input-button_color_on_hover">
                            {{ entry_button_color_on_hover }}
                        </label>
                        <div class="col-sm-10">
                            <input type="text"
                                   name="button_color_on_hover"
                                   value="{{ button_color_on_hover }}"
                                   placeholder="{{ entry_button_color_on_hover }}"
                                   id="input-button_color_on_hover"
                                   class="form-control" />
                            {% if error_button_color_on_hover %}
                                <div class="text-danger">{{ error_button_color_on_hover }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-icon_fa_class">{{ entry_icon_fa_class }}</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   name="icon_fa_class"
                                   value="{{ icon_fa_class }}"
                                   placeholder="{{ entry_icon_fa_class }}"
                                   id="input-icon_fa_class"
                                   class="form-control" />
                            {% if error_icon_fa_class %}
                                <div class="text-danger">{{ error_icon_fa_class }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="input-dropdown_menu_color">
                            {{ entry_dropdown_menu_color }}
                        </label>
                        <div class="col-sm-10">
                            <input type="text"
                                   name="dropdown_menu_color"
                                   value="{{ dropdown_menu_color }}"
                                   placeholder="{{ entry_dropdown_menu_color }}"
                                   id="input-dropdown_menu_color"
                                   class="form-control" />
                            {% if error_dropdown_menu_color %}
                                <div class="text-danger">{{ error_dropdown_menu_color }}</div>
                            {% endif %}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}